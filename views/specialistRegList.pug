extends layout
block content         




  


  body


    
    .main-content
      header
        h2
          .header-title
            label(for='')
              
            |           
        |                 
        
      
    .recent-grid
      .Projects
        .card
          .card-header
            
            a.btn.btn-warning(href='/specialist/specialistReg', role='button') 
                  span.las.la-arrow-left
                   
            h3 specialistlist.
                                   
            form.example(action='/specialist')
              input(type='text', placeholder='Search..', name='lastname')
              |   
              button(type='submit')
                i.fa.fa-search
            
            
            a.btn.btn-warning(href='/specialist/specialistReg', role='button') 
              span.las.la-user
                
              |
            
              
          |                   
          .card-body

          
          table
          table.table.table-hover
            thead
                    
            
      
              tr
                  th Last Name
                  th First Name
                  th Gender
                  th Specialist
                  th Location
                  th TelNo.
                  th Email
                  
                  

            tbody
              if users.length
              each user in users
                  tr
                      td #{user.lastname}
                      td #{user.firstname}
                      td #{user.gender}
                      td #{user.specialist}
                      td #{user.loaction}
                      td #{user.telephoneNo}
                      td #{user.email}
                      
                      td
                              a(href='/specialist/update/'+user._id)
                                span.icon 
                                  i.las.la-edit 
                      td
                          form(method="post" action='/specialist/delete')
                              input(type="hidden", placeholder="", name="id", value=user._id)
                              button.btn.btn-success.btn-block(type="submit") Delete

                    
