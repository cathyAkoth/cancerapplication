  title specialist

  


  body


    
    .main-content
      header
        h2
          .header-title
            label(for='')
              
            |                
        |                 
        
      
    .recent-grid
      .Projects
        .card
          .card-header
            
          a.btn.btn(href='/hospitalDashboard', role='button') 
            span.las.la-arrow-left Back to Dashboard
                   
            h3 Specialist list.
                                   
            form.example(action='/specialistReg/specialistReg')
              input(type='text', placeholder='Search..', name='lastname')
              |   
              button(type='submit')
                i.fa.fa-search
            
            
            a.btn.btn(href='/specialistReg/specialistReg', role='button') 
              span.las.la-user Add Specialist
                
              |
            
              
          |                   
          .card-body

          
          table
          table.table.table-hover
            thead
                    
            
      
              tr
                  th Last Name
                  th First Name
                  th Gender
                  th Specialisation
                  th location
                  th TelNo.
                  th Email
                 
                  

            tbody
              if users.length
              each user in users
                  tr
                      td #{user.lastname}
                      td #{user.firstname}
                      td #{user.gender}
                      td #{user.specialisation}
                      td #{user.location}
                      td #{user.telephoneNo}
                      td #{user.email}
                      
                      td
                              a(href='/specialistReg/update/'+user._id)
                                span.icon 
                                  i.las.la-edit 
                      td
                          form(method="post" action='/specialistReg/delete')
                              input(type="hidden", placeholder="", name="id", value=user._id)
                              button.btn.btn-success.btn-block(type="submit") Delete

                    
